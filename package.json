{
  "name": "llm-json-stream-typescript",
  "version": "0.0.0",
  "description": "Monorepo for the TypeScript port of llm-json-stream",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ComsIndeed/llm-json-stream-typescript.git"
  },
  "author": "ComsIndeed",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ComsIndeed/llm-json-stream-typescript/issues"
  },
  "homepage": "https://github.com/ComsIndeed/llm-json-stream-typescript#readme",
  "scripts": {
    "dev:demo": "pnpm -F web-demo dev",
    "dev": "concurrently \"pnpm -F llm-json-stream build --watch\" \"pnpm -F web-demo dev\"",
    "build:parser": "pnpm -F llm-json-stream build",
    "watch:parser": "pnpm -F llm-json-stream build --watch",
    "clean": "node ./scripts/clean.js"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}